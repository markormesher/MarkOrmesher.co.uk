mixin plugin_bootbox
	script(src = '/_vendor/js/bootbox.min.js')

mixin plugin_toastr(_)
	script(src = '/_vendor/js/toastr.min.js')
	script(src = '/_vendor/js/toastr.config.js')
	script(type = 'text/javascript').
		var toastrMessages = !{JSON.stringify(locals.messages || [])};
	script(src = '/_shared/js/toastr-listener.js')