extends ../_shared/page-layout

mixin project(title, subtitle, imageFolder)
	div.project-item: div
		if imageFolder != null
			img.inline-left(src = imageFolder + '/thumb.png', title = title)
		p.title= title
		if subtitle != null
			p.subtitle!= subtitle.join('<span class="text-very-muted"> // </span>')
		block
		br(clear = 'both')

block page-head
	link(rel = 'stylesheet', href = '/projects/css/projects.css')

block page-body

	div.project-grid

		+project('Unitu Android App', ['Android', 'Project Management'], '/projects/images/unitu-android-app')
			p Test content

		+project('Unitu Analytics Suite', ['Data Presentation', 'PHP', 'jQuery', 'ElasticSearch'])
			p Test content

		+project('Nuclibook', ['Java', 'Spark Framework', 'Project Management', 'University Project'])
			p Test content

		+project('Allianz Petplan Performance Dashboard', ['jQuery', 'CoffeeScript'])
			p Test content

		+project('Allianz Petplan "Your Voice"', ['Print Design', 'Communications', 'Managing Upwards'])
			p Test content

		+project('KCL Tech Android Lectures', ['Android', 'Teaching'])
			p Test content

		+project('NoisyTweets', ['Python', 'Flask Server', 'Twitter'])
			p Test content

		+project('MLHorrors', ['Android', 'GCM', 'Ruby'])
			p Test content

		+project('T.I.T.A.N.I.C.', ['Node.js', 'Express.js', 'MongoDB', 'Mongoose', 'CoffeeScript', 'SCSS', 'Jade', 'GitLab'])
			p Test content

	br(clear = 'both')

block scripts
	script(src = '/_vendor/js/masonry.packaged.min.js')
	script(src = '/projects/js/layout.js')